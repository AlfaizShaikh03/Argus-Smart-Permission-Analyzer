<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material Components theme (requires com.google.android.material dependency) -->
    <style name="Theme.SmartPermissionAnalyzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#00796B</item>
        <item name="colorPrimaryVariant">#004D40</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Edge-to-edge theme -->
    <style name="Theme.SmartPermissionAnalyzer.EdgeToEdge" parent="Theme.SmartPermissionAnalyzer">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">always</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
